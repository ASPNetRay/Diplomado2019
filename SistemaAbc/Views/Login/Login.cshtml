
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Acceso</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Ingrese sus datos</h3>
                    </div>
                    <div class="panel-body">
                        <form action="Acceso" method="post" class="form-horizontal">
                            <fieldset>
                                <center>
                                    <div class="form-group col d-flex justify-content-center">
                                        <input class="form-control" placeholder="Usuario" name="usuario" type="text" autofocus id="txtUsuario">
                                    </div>
                                    <div class="form-group col d-flex justify-content-center">
                                        <input class="form-control" placeholder="Password" name="clave" type="password" id="txtPassword">
                                    </div>

                                    <input type="submit" value="Entrar" class="btn btn-default" />
                                </center>
                            </fieldset>
                            </form>
                    </div>
                </div>
            </div>
        </div>
    </div>










    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

</body>
</html>


